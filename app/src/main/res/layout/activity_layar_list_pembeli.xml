<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.fadilayona.griyabusanawanita.LayarListPembeli">
    <TextView
        android:id="@+id/btGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Pembeli"
        android:padding="10dp"
        android:background="@color/indigo"
        android:textColor="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btGet"
        android:layout_above="@+id/btAddData" >
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/btAddData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Tambah Data Pembeli"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>