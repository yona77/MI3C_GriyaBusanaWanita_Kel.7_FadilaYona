<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/defaultimages"
    tools:context=".LayarInsertBaju">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgAddPhotoId"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/Blouse" />

        <Button
            android:id="@+id/btAddPhotoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imgAddPhotoId"
            android:layout_centerHorizontal="true"
            android:text="Pilih Foto"/>

        <TextView
            android:id="@+id/tvAddNamabaju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddNamabaju"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:text="Nama Baju:"
            android:textSize="20dp"
            android:layout_marginLeft="59dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/edtAddNamabaju"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btAddPhotoId"
            android:layout_marginEnd="58dp"
            android:hint="Nama Baju"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp" />

        <TextView
            android:id="@+id/tvAddKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvAddNamabaju"
            android:layout_below="@+id/tvAddNamabaju"
            android:text="Kategori:"
            android:textSize="20dp"
            android:layout_alignRight="@+id/tvAddNamabaju" />

        <EditText
            android:id="@+id/edtAddKategoribaju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddKategori"
            android:layout_alignLeft="@+id/edtAddNamabaju"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddKategori"
            android:hint="Kategori"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/tvAddHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvAddNamabaju"
            android:layout_below="@+id/tvAddKategori"
            android:text="Harga:"
            android:textSize="20dp"
            android:layout_alignRight="@+id/tvAddNamabaju" />

        <EditText
            android:id="@+id/edtAddHargaLaptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddHarga"
            android:layout_alignLeft="@+id/edtAddNamabaju"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddHarga"
            android:hint="Harga"
            android:inputType="number"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddHarga"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>

            <Button
                android:id="@+id/btAddBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LinearLayout"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp"/>
    </RelativeLayout>

</ScrollView>